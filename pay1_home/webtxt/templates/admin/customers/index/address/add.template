<div id="addCustomerAddressLightBox" class="light-box pnp-hidden overlay">
    <h1>Add Address</h1>
    <hr>

    <div class="pnp-box half display-format">
        <h4>Name</h4>
        <input type="text" id="addAddressName" class="pnp-input-control" maxlength="60">
    </div>

    <div class="pnp-box half display-format">
        <h4>Make Default</h4>
        <input type="checkbox" id="addAddressMakeDefault" class="pnp-input-control" >
    </div>

    <div class="pnp-box half">
        <h4>Company</h4>
        <input type="text" id="addAddressCompany" class="pnp-input-control" maxlength="60">
    </div>

    <div class="pnp-box half display-format">
        <h4 class="display-format">Line 1</h4>
        <span class="info-span">*</span>
        <br>
        <input type="text" id="addAddressLine1" class="pnp-input-control" maxlength="90">
    </div>

    <div class="pnp-box half display-format">
        <h4>Line 2</h4>
        <input type="text" id="addAddressLine2" class="pnp-input-control" maxlength="60">
    </div>

    <div class="pnp-box half display-format">
        <h4 class="display-format">City</h4>
        <span class="info-span">*</span>
        <br>
        <input type="text" id="addAddressCity" class="pnp-input-control" maxlength="60">
    </div>

    <div class="pnp-box half display-format">
        <h4 class="display-format">State</h4>
        <span class="info-span">*</span>
        <br>
        <select id="addAddressStateSelect" class="pnp-input-control"></select>
    </div>

    <div class="pnp-box half display-format">
        <h4 class="display-format">Postal Code</h4>
        <span class="info-span">*</span>
        <br>
        <input type="text" id="addAddressPostalCode" class="pnp-input-control" maxlength="20" >
    </div>

    <div class="pnp-box half display-format">
        <h4 class="display-format">Country</h4>
        <span class="info-span">*</span>
        <br>
        <select id="addAddressCountrySelect" class="pnp-input-control">
            <metavar='countrySelect'>
        </select>
    </div>

    <br>
    <br>
    <input id="closeAddCustomerAddressLightBox" type="button" class="pnp-input-control left-action-button" value="Close">
    <input id="saveAddress" type="button" class="pnp-input-control right-action-button" value="Submit">
</div>